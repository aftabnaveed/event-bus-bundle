{
    "name": "bruli/event-bus-bundle",
    "description": "Bundle to use event bus in symfony projects",
    "type": "library",
    "keywords": ["Symfony", "event bus", "CQRS", "command bus"],
    "require": {
        "symfony/dependency-injection": "~3.0",
        "symfony/yaml": "~3.0",
        "symfony/config": "~3.0",
        "symfony/http-kernel": "~3.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo Braulio",
            "email": "brulics@gmail.com"
        }
    ],
    "autoload": {
        "psr-4" : { "Bruli\\EventBusBundle\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": {"Bruli\\EventBusBundleTests\\": "tests"}
    },
    "config": {
        "bin-dir": "bin/"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "symfony/console": "~3.0",
        "mockery/mockery": "^0.9.9"
    }
}
